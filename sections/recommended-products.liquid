{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <product-recommendations
      class="recommended-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
      data-section-id="{{ section.id }}"
      data-collection-id="{{ section.settings.recommended-collection.id }}"
    >
      <h2 class="recommended-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>

      <form
        method="post"
        action="/cart/add"
        id="product_form_{{ section.id }}"
        accept-charset="UTF-8"
        class="shopify-product-form multi-product-form"
        enctype="multipart/form-data"
      >
        <ul
          class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
          role="list"
        >
          {% assign max_products_count = section.settings.products_to_show %}
          {% assign products_counter = 1 %}
          {% assign recommended_products = section.settings['recommended-collection'].products %}

          {% capture unique_products %}
            {% for product in recommended_products %}
                {{ product.title }}, 
            {% endfor %}
        {% endcapture %}
          {% assign unique_products = unique_products | split: ',' | uniq | join: ' ' %}

          {% assign skip_card_product_styles = false %}
          {% for product in recommended_products %}
            {% if unique_products contains product.title %}
              {% if product.available %}
                {% if product.tags contains 'do-not-recommend' %}
                  {% assign unique_products = unique_products | remove: product.title %}
                  {% continue %}
                {% endif %}
                {% if products_counter <= max_products_count %}
                  <li class="grid__item">
                    {% render 'card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      show_price: section.settings.show_price,
                      skip_styles: skip_card_product_styles
                    %}
                  </li>
                  {% assign products_counter = products_counter | plus: 1 %}
                  <!-- form content -->
                  <input
                    id="{{ product.selected_or_first_available_variant.id }}"
                    type="hidden"
                    name="id"
                    value="{{ product.selected_or_first_available_variant.id }}"
                    class="product-variant-id"
                  >
                  <!-- end form content -->
                {% endif %}
                {% assign unique_products = unique_products | remove: product.title %}
              {% endif %}
            {% endif %}
            {%- assign skip_card_product_styles = true -%}
          {% endfor %}
        </ul>

        <div class="product-form__buttons">
          <button
            id="ProductSubmitButton-{{ section.id }}"
            type="submit"
            name="add"
            class="product-form__submit button button--full-width button--primary"
          >
            <span>
              {% if section.settings.button_label %}
                {{ section.settings.button_label }}
              {% else %}
                {{ 'products.product.add_to_cart' | t }}
              {% endif %}
            </span>
            {%- render 'loading-spinner' -%}
          </button>
        </div>
      </form>
    </product-recommendations>

    {% if section.settings.image_shape == 'arch' %}
      {% render 'mask-arch' %}
    {%- endif -%}
  </div>
</div>

